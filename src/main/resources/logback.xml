<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <jmxConfigurator/>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%X{mdc.client}] [%thread] %-5level %logger{15} - %msg%n</pattern>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
<!--    <logger level="debug" name="world.gfi.nfs4j" additivity="false" />-->
<!--    <logger level="debug" name="org.dcache" additivity="false" />-->
</configuration>
